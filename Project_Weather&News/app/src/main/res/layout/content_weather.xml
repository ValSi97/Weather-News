<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Backgroundcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.valsi.weathernews.WeatherActivity"
    tools:showIn="@layout/activity_weather">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/week_weather"
            android:textSize="24sp"
            android:textColor="#d6cdcd"
            android:background="@drawable/roundcorner"
            android:id="@+id/weekButton"
            tools:layout_width="match_parent"
            tools:layout_height="100dp"
            android:layout_width="500dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="83dp"
            android:layout_height="150dp" />

        <Button
            android:textSize="24sp"
            android:text="@string/daily_weather"
            android:textColor="#d6cdcd"
            android:background="@drawable/roundcorner"
            android:layout_width="500dp"
            android:id="@+id/dailyButton"
            tools:layout_width="match_parent"
            tools:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="150dp" />
    </RelativeLayout>
</RelativeLayout>
